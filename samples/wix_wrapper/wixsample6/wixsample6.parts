Import('*')

env.PartName('wixsample6')
env.PartVersion('1.0.0')

# This sample tests plain installation: all sources are static and resides in src_dir
arch="x64" if env["TARGET_ARCH"] == "x86_64" else env["TARGET_ARCH"]
env.Append(WIXLINKEXTENSIONS = ['WixUIExtension'],
        WIXCLFLAGS=["-arch",arch])
result=env.MSIPackage('install',sources = ['pkg6','pkg_control'],PACKAGE_ROOT="")
env.Alias("dist",env.CCopy("#dist",result))[0]

